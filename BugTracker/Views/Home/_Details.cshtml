@model BugTracker.Models.TicketModel

<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModal" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="detailsModal">Details</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body pb-0">
				<hr />
				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Urgency)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Urgency)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => model.Description)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => model.Description)
					</dd>
				</dl>
			</div>
		</div>
	</div>
</div>